<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>">
      <div class="content">
        <span id="blogDate"><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p id="blogBody"><%- blog.body %></p>
      </div>
      <a class="ui orange basic button deleteForm" href="/blogs/<%= blog._id %>/edit">Edit Blog</a>
      <form class="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button right floated">Delete</button>
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>